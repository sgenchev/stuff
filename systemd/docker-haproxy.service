[Unit]
Description=Docker container haproxy service
After=docker.service
Requires=docker.service

[Service]
Restart=always
EnvironmentFile=-/etc/default/docker-haproxy
ExecStart=/usr/bin/docker run --name haproxy $DOCKER_OPTS haproxy:alpine
ExecStop=/usr/bin/docker stop -t 2 haproxy; /usr/bin/docker rm haproxy
ExecReload=/usr/bin/docker kill -s HUP haproxy

[Install]
WantedBy=multi-user.target

